@model NextChallenge.Models.TopicOutput
@{
    ViewBag.Title = "Edit";
}

<h2>Edit @Model.Title</h2>


@using (Html.BeginForm("Edit", "Topic", FormMethod.Post))
{
    <div class="form-group">
        <text>Title</text>
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <text>Text Description</text>
        @Html.TextAreaFor(m => m.Body, new { @class = "form-control", @style = "height:100px" })
    </div>
    <div>@Html.ValidationMessage("EditError",new { @class = "text-danger" })</div> <br />

    @Html.HiddenFor(m=> m.IdTopic)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary"> Edit </button> @Html.ActionLink("Topic List", "Index", "Topic")<br />
}



